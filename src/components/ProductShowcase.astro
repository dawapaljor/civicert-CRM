---
// Product showcase component for dashboard
---

<div class="bg-white shadow rounded-lg p-6">
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-lg font-medium text-gray-900">Featured Products</h3>
    <a href="#" class="text-sm text-indigo-600 hover:text-indigo-500 font-medium">View all</a>
  </div>
  
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <!-- Product 1 -->
    <div class="group cursor-pointer">
      <div class="aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-lg bg-gray-200">
        <img src="https://images.unsplash.com/photo-1505740420928-5e560c06d30e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=80" alt="Boat Headphone" class="h-full w-full object-cover object-center group-hover:opacity-75 transition-opacity">
      </div>
      <div class="mt-4">
        <h4 class="text-sm font-medium text-gray-900">Boat Headphone</h4>
        <div class="mt-2 flex items-center space-x-2">
          <span class="text-lg font-bold text-gray-900">$50</span>
          <span class="text-sm text-gray-500 line-through">$65</span>
        </div>
        <div class="mt-2">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
            -23% OFF
          </span>
        </div>
      </div>
    </div>

    <!-- Product 2 -->
    <div class="group cursor-pointer">
      <div class="aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-lg bg-gray-200">
        <img src="https://images.unsplash.com/photo-1517336714731-489689fd1ca8?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=80" alt="MacBook Air Pro" class="h-full w-full object-cover object-center group-hover:opacity-75 transition-opacity">
      </div>
      <div class="mt-4">
        <h4 class="text-sm font-medium text-gray-900">MacBook Air Pro</h4>
        <div class="mt-2 flex items-center space-x-2">
          <span class="text-lg font-bold text-gray-900">$650</span>
          <span class="text-sm text-gray-500 line-through">$900</span>
        </div>
        <div class="mt-2">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
            -28% OFF
          </span>
        </div>
      </div>
    </div>

    <!-- Product 3 -->
    <div class="group cursor-pointer">
      <div class="aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-lg bg-gray-200">
        <img src="https://images.unsplash.com/photo-1515372039744-b8f02a3ae446?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=80" alt="Red Velvet Dress" class="h-full w-full object-cover object-center group-hover:opacity-75 transition-opacity">
      </div>
      <div class="mt-4">
        <h4 class="text-sm font-medium text-gray-900">Red Velvet Dress</h4>
        <div class="mt-2 flex items-center space-x-2">
          <span class="text-lg font-bold text-gray-900">$150</span>
          <span class="text-sm text-gray-500 line-through">$200</span>
        </div>
        <div class="mt-2">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
            -25% OFF
          </span>
        </div>
      </div>
    </div>

    <!-- Product 4 -->
    <div class="group cursor-pointer">
      <div class="aspect-w-1 aspect-h-1 w-full overflow-hidden rounded-lg bg-gray-200">
        <img src="https://images.unsplash.com/photo-1558618666-fcd25c85cd64?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=500&q=80" alt="Cute Soft Teddybear" class="h-full w-full object-cover object-center group-hover:opacity-75 transition-opacity">
      </div>
      <div class="mt-4">
        <h4 class="text-sm font-medium text-gray-900">Cute Soft Teddybear</h4>
        <div class="mt-2 flex items-center space-x-2">
          <span class="text-lg font-bold text-gray-900">$285</span>
          <span class="text-sm text-gray-500 line-through">$345</span>
        </div>
        <div class="mt-2">
          <span class="inline-flex items-center px-2.5 py-0.5 rounded-full text-xs font-medium bg-red-100 text-red-800">
            -17% OFF
          </span>
        </div>
      </div>
    </div>
  </div>
</div>
