---
import Layout from "../layouts/Layout.astro";
import Sidebar from "../components/Sidebar.astro";
import Header from "../components/Header.astro";
import StatsCards from "../components/StatsCards.astro";
import Charts from "../components/Charts.astro";
import RecentActivities from "../components/RecentActivities.astro";
import TopClients from "../components/TopClients.astro";
import ProductShowcase from "../components/ProductShowcase.astro";
---

<Layout>
  <div class="flex h-screen bg-gray-50">
    <!-- Sidebar -->
    <Sidebar />
    
    <!-- Main content -->
    <div class="flex-1 flex flex-col overflow-hidden lg:ml-64">
      <!-- Header -->
      <Header />
      
      <!-- Main content area -->
      <main class="flex-1 overflow-x-hidden overflow-y-auto bg-gray-50 p-6 dark:bg-indigo-950">
        <!-- Stats Cards -->
        <StatsCards />
        
        <!-- Charts Section -->
        <Charts />
        
        <!-- Bottom Section -->
        <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
          <!-- Recent Activities -->
          <div class="lg:col-span-1">
            <RecentActivities />
          </div>
          
          <!-- Top Clients -->
          <div class="lg:col-span-2">
            <TopClients />
          </div>
        </div>
        
        <!-- Product Showcase -->
        <div class="mt-8">
          <!-- <ProductShowcase /> -->
        </div>
      </main>
    </div>
  </div>
</Layout>
