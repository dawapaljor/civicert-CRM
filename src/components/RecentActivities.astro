---
// Recent activities component for dashboard
---

<div class="bg-white shadow rounded-lg p-6">
  <div class="flex items-center justify-between mb-6">
    <h3 class="text-lg font-medium text-gray-900">Recent Activities</h3>
    <a href="#" class="text-sm text-indigo-600 hover:text-indigo-500 font-medium">View all</a>
  </div>
  
  <div class="space-y-4">
    <!-- Activity Item 1 -->
    <div class="flex items-start space-x-3">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
          <i class="fas fa-user text-green-600 text-sm"></i>
        </div>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm text-gray-900">
          <span class="font-medium">Tenzin Added</span> 2 Users
        </p>
        <p class="text-xs text-gray-500">9:30 AM</p>
      </div>
    </div>

    <!-- Activity Item 2 -->
    <div class="flex items-start space-x-3">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-blue-100 rounded-full flex items-center justify-center">
          <i class="fas fa-trash text-blue-600 text-sm"></i>
        </div>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm text-gray-900">
          <span class="font-medium">You have deleted</span> entry2
        </p>
        <p class="text-xs text-gray-500">10:00 AM</p>
      </div>
    </div>




    <!-- Activity Item 5 -->
    <div class="flex items-start space-x-3">
      <div class="flex-shrink-0">
        <div class="w-8 h-8 bg-purple-100 rounded-full flex items-center justify-center">
          <i class="fas fa-box text-purple-600 text-sm"></i>
        </div>
      </div>
      <div class="flex-1 min-w-0">
        <p class="text-sm text-gray-900">
          <span class="font-medium">You modified </span> - 2 records
        </p>
        <p class="text-xs text-gray-500">4:15 PM</p>
      </div>
    </div>

  </div>
</div>
